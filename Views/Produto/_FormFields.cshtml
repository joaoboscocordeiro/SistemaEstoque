@using SistemaEstoque.Dtos.Produto
@model ProdutoDto

<div class="col-md-6">
    <label asp-for="Nome" class="form-label">Nome</label>
    <input asp-for="Nome" class="form-control" />
    <span asp-validation-for="Nome" class="text-danger"></span>
</div>
<div class="col-md-6">
    <label asp-for="Codigo" class="form-label">Código</label>
    <input asp-for="Codigo" class="form-control" />
    <span asp-validation-for="Codigo" class="text-danger"></span>
</div>
<div class="col-md-12">
    <label asp-for="Descricao" class="form-label">Descrição</label>
    <textarea asp-for="Descricao" class="form-control"></textarea>
    <span asp-validation-for="Descricao" class="text-danger"></span>
</div>

<div class="col-md-6">
    <label asp-for="Preco" class="form-label">Preço</label>
    <input asp-for="Preco" class="form-control" />
    <span asp-validation-for="Preco" class="text-danger"></span>
</div>
<div class="col-md-6">
    <label asp-for="Quantidade" class="form-label">Quantidade</label>
    <input asp-for="Quantidade" class="form-control" />
    <span asp-validation-for="Quantidade" class="text-danger"></span>
</div>
<div class="col-md-12">
    <label asp-for="CategoriaId" class="form-label">Categoria</label>
    <select asp-for="CategoriaId" class="form-select"
            asp-items="Model.Categorias">
        <option value="">Selecione...</option>
    </select>
    <span asp-validation-for="CategoriaId" class="text-danger"></span>
</div>

<div class="col-md-12">
    <label asp-for="ImagemUpload" class="form-label">Imagem</label>
    <input asp-for="ImagemUpload" class="form-control" type="file" />
    <span asp-validation-for="ImagemUpload" class="text-danger"></span>
    @if (Model != null)
    {
        @if (Model.Imagem != null)
        {
            <div class="mt-2">
                <strong>Imagem Atual:</strong><br />
                <img src="@Url.Action("Imagem", "Produto", new { id = Model.Id })" width="120" class="img-thumbnail" />
            </div>
        }
    }
</div>