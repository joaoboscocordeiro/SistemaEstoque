@using SistemaEstoque.Models
@model IEnumerable<CategoriaModel>

@{
    ViewData["Title"] = "Categorias";
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-dark" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-dark" role="alert">
        @TempData["MensagemErro"]
    </div>
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-tags-fill"></i>Categorias</h2>
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i>Nova Categoria
        </a>
    </div>
    @if (!Model.Any())
    {
        <div class="alert alert-info">Nenhuma categoria cadastrada.</div>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Descrição</th>
                    <th class="text-end">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var categoria in Model)
                {
                    <tr>
                        <td>@categoria.Id</td>
                        <td>@categoria.Descricao</td>
                        <td class="text-end">
                            <a href="@Url.Action("Delete", new { id = categoria.Id })" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i>Excluir
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>